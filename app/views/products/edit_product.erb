<div class="error_message">
  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
</div>
<br></br>
<h1>Edit Product</h1>

<form action="/products/<%= @product.id %>" method="post">
    <label>Product Name</label>
    <input type="text" name="name" value="<%= @product.name %>" required></input>
        <br></br>

    <label>Product Description</label>
    <input type="textarea" name="description" value="<%= @product.description %>" required></input>
        <br></br>

    <input type="submit" value="Update Product">
</form>
