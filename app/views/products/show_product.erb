<h1>List product details</h1>
<%= @product.name %>
<br></br>
<%= @product.description %>
<br></br>
  <a href="/reviews/<%=@product.id%>/new">Write Reviews for this product here !</a>
<br></br>

<table>
          <% @reviews.each do |review|%>
              <tr>
                <td>
                  <%= review.title %>
                  <%= review.review_comment %>
                  <%= review.recommend %>
                  <%= review.rating %>
                </td>

                <td>
                  <a href="/reviews/<%=@product.id%>/edit/<%=review.id%>">Edit Review</a>
                  <a href="/reviews/<%=@product.id%>/delete/<%=review.id%>">Delete Review</a>
                </td>

            </tr>
          <% end %>
</table>

  <a href="/products/<%=@product.id%>/edit">Edit Product</a>

  <form action="/products/<%=@product.id%>/delete" method="POST">
  <input name="_method" type="hidden" value="delete" />
    <input type="submit" value="Delete Product">
  </form>
