

<h1>Edit Review</h1>
<h3>Update review for product name</h3>
<h3>Product Name : <%= @product.name %></h3>
<br></br>

<form action="/reviews/<%= @product.id %>/edit/<%= @review.id %>" method="post">
    <label>Review Title</label>
    <input type="text" name="title" value="<%= @review.title %>" required></input>
        <br></br>

    <label>Review Comment</label>
    <input type="textarea" name="review_comment" value="<%= @review.review_comment %>" required></input>
        <br></br>

    <label>Do You recommend this Product? </label>
    <!-- <input type="text" name="recommend" value="<%= @review.recommend %>" required></input> -->
    <% if @review.recommend == true %>
      <input type="radio" name="recommend" value="true" checked>Yes</input>
      <input type="radio" name="recommend" value="false" >No</input>
    <%else%>
      <input type="radio" name="recommend" value="true" >Yes</input>
      <input type="radio" name="recommend" value="false" checked>No</input>
    <%end%>

        <br></br>

    <label>Rating (1-5)</label>

    <select name="rating" required>
      <% (1..5).each do |i|
        if i == @review.rating
      %>
          <option value="<%=i%>" selected><%=i%></option>
      <%else%>
          <option value="<%=i%>"><%=i%></option>
      <%end
      end%>

    </select>
        <br></br>

    <input type="submit" value="Update Review">
</form>
